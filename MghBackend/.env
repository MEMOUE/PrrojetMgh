# ==========================================
# CONFIGURATION MAGESTIONHOTEL - PRODUCTION
# ==========================================
# Date de création : 2025
# Environnement : Production
# ==========================================

# ==========================================
# 1. BASE DE DONNÉES MYSQL
# ==========================================
MYSQL_DATABASE=mgh_db
MYSQL_USER=mgh_user
MYSQL_PASSWORD=mghSecure@2025!Strong
MYSQL_ROOT_PASSWORD=mghRootSecure@2025!Strong

# URL de connexion Spring Boot
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/mgh_db?useSSL=false&serverTimezone=Africa/Abidjan&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_USERNAME=mgh_user
SPRING_DATASOURCE_PASSWORD=mghSecure@2025!Strong

# ==========================================
# 2. SÉCURITÉ & JWT
# ==========================================
# Générer une nouvelle clé avec : openssl rand -base64 64
JWT_SECRET=ojJMx7uTkjO3Ov5BOjUimTFkk5Nb+zXvW+6wSRQUqSZeR9OjhseXki3vSA055PApH5ApNPXngdkkFfwOtax4eg==
JWT_EXPIRATION=86400000

# ==========================================
# 3. DOMAINES & SSL
# ==========================================
DOMAIN=magestionhotel.com
DOMAIN_WWW=www.magestionhotel.com
DOMAIN_API=api.magestionhotel.com
DOMAIN_DB=db.magestionhotel.com

# Email admin pour Let's Encrypt
LETSENCRYPT_EMAIL=contact@magestionhotel.com

# ==========================================
# 4. CONFIGURATION CORS
# ==========================================
CORS_ALLOWED_ORIGINS=https://magestionhotel.com,https://www.magestionhotel.com,https://api.magestionhotel.com

# ==========================================
# 5. CONFIGURATION EMAIL
# ==========================================
EMAIL_HOST=mail.magestionhotel.com
EMAIL_PORT=587
EMAIL_USERNAME=contact@magestionhotel.com
EMAIL_PASSWORD=VotreMotDePasseEmail@2025
EMAIL_FROM=contact@magestionhotel.com
EMAIL_FROM_NAME=MaGestionHotel

# ==========================================
# 6. UPLOADS & STOCKAGE
# ==========================================
UPLOAD_MAX_SIZE=20M
UPLOAD_DIR_ACTUALITES=/app/uploads/actualites
UPLOAD_DIR_DIRECTEURS=/app/uploads/directeurs
UPLOAD_DIR_HOTELS=/app/uploads/hotels
UPLOAD_DIR_CHAMBRES=/app/uploads/chambres

# ==========================================
# 7. CONFIGURATION SYSTÈME
# ==========================================
TZ=Africa/Abidjan
ENVIRONMENT=production
DEBUG=false

# Spring Boot
SPRING_PROFILES_ACTIVE=prod

# Java Options (pour un serveur avec 2GB+ RAM)
JAVA_OPTS=-Xms512m -Xmx1024m -Djava.security.egd=file:/dev/./urandom -XX:+UseG1GC -XX:MaxGCPauseMillis=200

# ==========================================
# 8. LOGS
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/mgh-backend.log

# ==========================================
# 9. RATE LIMITING (Nginx)
# ==========================================
API_RATE_LIMIT=10r/s
LOGIN_RATE_LIMIT=5r/m

# ==========================================
# 10. BACKUP (Optionnel)
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# ==========================================
# NOTES DE SÉCURITÉ
# ==========================================
# ⚠️  IMPORTANT - À MODIFIER EN PRODUCTION :
# 1. Changer tous les mots de passe par des valeurs fortes
# 2. Générer une nouvelle clé JWT_SECRET
# 3. Configurer les vraies informations email
# 4. Activer le monitoring et les backups
# 5. Restreindre l'accès à PhpMyAdmin par IP si possible
# ==========================================